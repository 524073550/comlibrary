<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_rl_titie"
    android:layout_width="match_parent"
    android:layout_height="49dp"
    tools:showIn="@layout/activity_base">

    <ImageView
        android:visibility="visible"
        android:id="@+id/base_iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/base_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="标题"
        android:textSize="36px"/>


    <ImageView
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:id="@+id/base_iv_right1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        />

    <ImageView
        android:visibility="gone"
        android:layout_toLeftOf="@id/base_iv_right1"
        android:id="@+id/base_iv_right2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        />
</RelativeLayout>